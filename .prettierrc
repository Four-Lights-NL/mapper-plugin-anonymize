{
	"useTabs": true,
	"singleQuote": true,
	"semi": false,
	"trailingComma": "all",
	"printWidth": 100,
	"overrides": [
		{
			"files": [".prettierrc", ".lintstagedrc", ".commitlintrc", "*.json"],
			"options": { "parser": "json" }
		},
    {
      "files": ["*.md", "*.mdx"],
      "options": { "parser": "markdown" }
    }
  ]
}
