{
	"compilerOptions": {
		"target": "ESNext",
		"module": "CommonJS",
		"outDir": "dist",
		"esModuleInterop": true,
		"baseUrl": ".",
		"skipLibCheck": true,
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true
	},
	"include": ["src/**/*"]
}
